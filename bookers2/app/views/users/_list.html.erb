<div class="col-md-3">
<% if notice %>
　　<p class="success"><%= notice %></p>
<% end %>
<% if alert %>
   <p class="success"><%= alert %></p>
<% end %>

<h2>User info</h2>
<table class="table">
  <tbody>
      <tr><td><%= attachment_image_tag user, :profile_image, fallback: "no-image.png", size: "60x60", format: "jpg" %></td></tr>
      <tr><td>name</td><td><%= user.name %></td></tr>
      <tr><td>introduction</td><td><%= user.introduction %></td></tr>
  </tbody>
</table>
<div class="row btn btn-outline-secondary btn-block">
<%= link_to "/users/#{user.id}/edit" do %><i class="fas fa-user-cog btn"></i><% end %>
</div>

<h2>New book</h2>
<%= form_with model:book, local:true do |f| %>
<p>Title</p>
<%= f.text_field :title %>

<p>Opinion</p>
<%= f.text_field :body %>
<div class= "submit">
<%= f.submit 'Create Book', class: "btn btn-success" %>
</div>
<% end %>
</div>

