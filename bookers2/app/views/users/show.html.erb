<% if @book.errors.any? %>
 <p class="error"><%= @book.errors.count %>件のエラーが発生しました</p>
 <% @book.errors.full_messages.each do |message| %>
   <p class="error"><%= message %></p>
  <% end %>
 <% end %>
 <div class="row">
<%= render 'users/list', user: @user, book: @book %>
<div class="col-md-8 offset-md-1">
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan ="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= link_to (attachment_image_tag book.user, :profile_image, fallback: "no-image.png", size: "40x40", format: "jpg"), user_path(book.user) %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
     <% end %>
  </tbody>
</table>
</div>
</div>
