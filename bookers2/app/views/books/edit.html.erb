<% if @book.errors.any? %>
 <p class="error"><%= @book.errors.count %>件のerrorが発生しました</p>
 <% @book.errors.full_messages.each do |message| %>
   <p class="error"><%= message %></p>
  <% end %>
 <% end %>
<h2>Editing Book</h2>
<%= form_with model:@book, local:true do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Opinion</p>
<%= f.text_area :body %>
<%= f.submit 'Update Book' %>
<% end %>
<span><%= link_to 'Show', book_path(@book) %></span><span>|</span><span><%= link_to 'Back', books_path %></span>