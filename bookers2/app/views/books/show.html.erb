<% if @book.errors.any? %>
 <p class="error"><%= @book.errors.count %>件のエラーが発生しました</p>
 <% @book.errors.full_messages.each do |message| %>
   <p class="error"><%= message %></p>
  <% end %>
 <% end %>
 <div class="row">
<%= render 'users/list', user: @book.user, book: @booknew %>
<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
<table class="table table-hover table-inverse">
    <tbody>
        <tr>
            <td><%= attachment_image_tag @book.user, :profile_image, fallback: "no-image.png", size: "40x40", format: "jpg" %></br><%= link_to @book.user.name, user_path(@book.user) %></td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
            <% end %>
        </tr>
    </tbody>
</table>
</div>
</div>